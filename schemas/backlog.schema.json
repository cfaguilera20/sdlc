{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Backlog",
  "type": "object",
  "required": [
    "epic",
    "stories"
  ],
  "properties": {
    "epic": {
      "type": "object",
      "required": [
        "id",
        "title"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "goal": {
          "type": "string"
        }
      }
    },
    "stories": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "story_id",
          "title",
          "user_story",
          "acceptance_criteria",
          "priority",
          "dependencies",
          "out_of_scope"
        ],
        "properties": {
          "story_id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "user_story": {
            "type": "string"
          },
          "acceptance_criteria": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "priority": {
            "type": "string"
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "out_of_scope": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
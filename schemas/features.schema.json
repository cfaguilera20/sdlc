{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "FeaturesFile",
  "type": "object",
  "required": ["version", "project", "features"],
  "properties": {
    "version": { "type": "string", "enum": ["1.0"] },
    "project": {
      "type": "object",
      "required": ["id", "title", "created_at"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "title": { "type": "string", "minLength": 1 },
        "created_at": { "type": "string", "minLength": 1 },
        "run_dir": {
          "type": "string",
          "description": "Optional default run folder for this project (runs/<...>/)"
        }
      },
      "additionalProperties": false
    },
    "features": {
      "type": "array",
      "items": { "$ref": "#/$defs/feature" }
    }
  },
  "additionalProperties": false,
  "$defs": {
    "feature": {
      "type": "object",
      "required": ["id", "description", "status", "priority", "depends_on", "created_at"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "description": { "type": "string", "minLength": 1 },
        "status": {
          "type": "string",
          "enum": ["pending", "in_progress", "done", "blocked", "cancelled"]
        },
        "priority": { "type": "integer", "minimum": 0 },
        "depends_on": {
          "type": "array",
          "items": { "type": "string" }
        },
        "discovered_from": {
          "type": ["string", "null"],
          "description": "Optional feature id that spawned this work"
        },
        "spec_file": {
          "type": ["string", "null"],
          "description": "Optional path to a spec file in runs/<...>/ (e.g., runs/.../spec.json)"
        },
        "owner": { "type": ["string", "null"] },
        "created_at": { "type": "string", "minLength": 1 },
        "updated_at": { "type": ["string", "null"] }
      },
      "additionalProperties": false
    }
  }
}



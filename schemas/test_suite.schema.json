{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "TestSuite",
  "type": "object",
  "required": [
    "story_id",
    "traceability",
    "test_cases",
    "automation_notes",
    "warnings"
  ],
  "properties": {
    "story_id": {
      "type": "string"
    },
    "traceability": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "ac",
          "tests"
        ],
        "properties": {
          "ac": {
            "type": "string"
          },
          "tests": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "test_cases": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "type",
          "title",
          "steps",
          "expected"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "unit",
              "integration",
              "e2e",
              "contract",
              "security",
              "performance"
            ]
          },
          "title": {
            "type": "string"
          },
          "steps": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "expected": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "automation_notes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "warnings": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}